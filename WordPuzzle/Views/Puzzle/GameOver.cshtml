@{
  Layout = "_Layout";
}

@if (@Model.Win)
{
  <h1 class="text-center">You Win</h1>
  <p>You guessed the word which was: <strong>@Model.Solution</strong></p>
}
else
{
  <h1 class="text-center">You Lose</h1>
  <p>The word was: <strong>@Model.Solution</strong></p>
  <p></p>
}

<a href="/puzzle">New Game</a>